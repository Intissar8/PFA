<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <!-- Order Details -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/princ_color"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="16sp"
                android:textColor="@color/second_color"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="16sp"
                android:textColor="@color/second_color"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textSize="16sp"
                android:textColor="@color/second_color"
                android:paddingBottom="12dp" />

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:gravity="center"
                android:paddingVertical="12dp" />

            <!-- Step Item Template -->
            <LinearLayout
                android:id="@+id/step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconStep1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="#2196F3" />

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Received"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconStep2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_local_shipping"
                    android:tint="#BDBDBD" />

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Transit"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconStep3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_home"
                    android:tint="#BDBDBD" />

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Current status text -->
            <TextView
                android:id="@+id/tvCurrentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Status: Order Received"
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:paddingTop="20dp"
                android:gravity="center" />

            <!-- Review Button -->
            <Button
                android:id="@+id/btnReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leave a Review"
                android:textSize="16sp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
