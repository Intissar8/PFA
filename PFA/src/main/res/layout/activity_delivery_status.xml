<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="3dp"
        android:padding="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Status"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Step 1: Order Received -->
        <LinearLayout
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconStep1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:tint="#03A9F4" />

            <TextView
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Received"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Step 2: In Transit -->
        <LinearLayout
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconStep2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_local_shipping"
                android:tint="#BDBDBD" />

            <TextView
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Transit"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Step 3: Delivered -->
        <LinearLayout
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconStep3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="#BDBDBD" />

            <TextView
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Current status text -->
        <TextView
            android:id="@+id/tvCurrentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Status: Order Received"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:paddingTop="20dp"
            android:gravity="center" />

        <!-- Review Button -->
        <Button
            android:id="@+id/btnReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave a Review"
            android:textSize="16sp"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
             />
    </LinearLayout>

</ScrollView>