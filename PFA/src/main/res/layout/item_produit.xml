<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/produitImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/produitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produit Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/produitPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix: 0.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Product Quantity -->
        <TextView
            android:id="@+id/produitQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantité: 0"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Product Category -->
        <TextView
            android:id="@+id/produitCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catégorie: Alimentation"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/produitDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Modifier"
                android:layout_marginEnd="16dp"
               android:padding="4dp" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Supprimer"
                android:padding="4dp" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>